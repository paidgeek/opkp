<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sqlGetFood" class="java.lang.String">
        <constructor-arg value="SELECT * FROM fir_food
                                JOIN fir_value USING(ORIGFDCD)
                                JOIN fir_component ON(fir_value.COMPID = fir_component.ECOMPID)
                                WHERE ORIGFDCD = ?"/>
    </bean>

    <bean id="sqlGetComponentsForFood" class="java.lang.String">
        <constructor-arg value="SELECT * FROM fir_value
                                JOIN fir_component ON(fir_value.COMPID = fir_component.ECOMPID)
                                WHERE ORIGFDCD = ?"/>
    </bean>

</beans>
